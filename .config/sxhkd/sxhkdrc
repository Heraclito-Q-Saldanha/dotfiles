super + Return
	gnome-terminal

super + @space
	rofi -show run

super + Escape
	xkill

super + alt + {q,r}
	bspc {quit,wm -r}

super + f
	bspc node -t ~floating

super + {_,shift + }w
        bspc node -{c,k}

super + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

super + F11
	bspc node -t ~fullscreen

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}2%

Print
	scrot ${HOME}/Imagens/screenshots/
